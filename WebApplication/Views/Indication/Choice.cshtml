@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@using WebApplication.Models
@{
    ViewData["Title"] = "Показания";
    Layout = "~/Views/_Layout.cshtml";
}

<form method="post" action="~/indication/choice">
    <div class="form-group">
        <label> Заказ </label>
        <select asp-items="@(new SelectList(ViewBag.Orders, "Id", "Id", ViewData["orderId"]))" name="orderId" class="browser-default custom-select form-control"></select>
    </div>
    <div class="form-group">
        <label> Дата </label>
        <input type="date" name="date" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>