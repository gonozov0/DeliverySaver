@using WebApplication.Models
@{
    Layout = "~/Views/_Layout.cshtml";
    ViewData["Title"] = "Employee";
}
@model EmployeeModel

<form method="post" action="~/employee/@Model.Id">
    <div class="form-group">
        <label> Наименование </label>
        <input type="text" name="employee.FullName" class="form-control" value="@Model.FullName">
    </div>
    <div class="form-group">
        <label> Дата рождения </label>
        <input type="date" name="employee.Birthday" class="form-control" value="@Model.Birthday.ToString("yyyy-MM-dd")">
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
    <button onclick="deleteData(@Model.Id)" class="btn btn-primary">Удалить</button>
</form>